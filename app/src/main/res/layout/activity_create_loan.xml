<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:paddingLeft="@dimen/activity_horizontal_margin"
android:paddingRight="@dimen/activity_horizontal_margin"
android:orientation="vertical"
android:paddingTop="@dimen/activity_vertical_margin"
android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.tokkalo.lms.CreateLoanActivity">



<TextView
    android:id="@+id/textView1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="20sp"
    android:layout_marginBottom="30sp"
    android:layout_gravity="center_horizontal"
    android:textSize="20dp"
    android:text="Create a new loan" />

<android.support.design.widget.TextInputLayout
    android:id="@+id/layoutLoanName"
    android:layout_width="match_parent"
    android:theme="@style/TextLabel"
    android:layout_height="wrap_content">

    <EditText
        android:id="@+id/loanName"
        android:layout_marginTop="10sp"
        android:layout_width="match_parent"
        android:hint="Loan name"
        android:textColor="@color/black"
        android:imeOptions="actionNext"
        android:inputType="text"
        android:layout_height="wrap_content" />
</android.support.design.widget.TextInputLayout>

<android.support.design.widget.TextInputLayout
    android:id="@+id/layoutLoanAmount"
    android:layout_width="match_parent"
    android:theme="@style/TextLabel"
    android:layout_height="wrap_content">

    <EditText
        android:id="@+id/loanAmount"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6sp"
        android:textColor="@color/white"
        android:imeOptions="actionNext"
        android:hint="Loan amount"
        android:inputType="number" />
</android.support.design.widget.TextInputLayout>

<android.support.design.widget.TextInputLayout
    android:id="@+id/layoutTenure"
    android:layout_width="match_parent"
    android:theme="@style/TextLabel"
    android:layout_height="wrap_content">

    <EditText
        android:id="@+id/tenure"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6sp"
        android:textColor="@color/white"
        android:inputType="text"
        android:imeOptions="actionDone"
        android:hint="Tenure in months" />
</android.support.design.widget.TextInputLayout>


<android.support.design.widget.TextInputLayout
        android:id="@+id/layoutLoanEmi"
        android:layout_width="match_parent"
        android:theme="@style/TextLabel"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/loanEmi"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6sp"
            android:textColor="@color/white"
            android:inputType="text"
            android:imeOptions="actionDone"
            android:hint="Loan emi" />
    </android.support.design.widget.TextInputLayout>

 <android.support.design.widget.TextInputLayout
        android:id="@+id/layoutLoanStartDate"
        android:layout_width="match_parent"
        android:theme="@style/TextLabel"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/loanStartDate"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6sp"
            android:textColor="@color/white"
            android:inputType="text"
            android:imeOptions="actionDone"
            android:hint="Loan start date" />
    </android.support.design.widget.TextInputLayout>

    <Button
    android:id="@+id/button"
    android:layout_width="175dp"
    android:layout_height="40dp"
    android:layout_marginTop="20sp"
    android:layout_gravity="center_horizontal"
    android:textAllCaps="false"
    android:textSize="16dp"
    android:text="Create"
    android:onClick="createLoan" />


</LinearLayout>

